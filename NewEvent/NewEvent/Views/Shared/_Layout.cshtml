	<!-- Google Font -->
	<link href='https://fonts.googleapis.com/css?family=Poppins:400,500,600' rel='stylesheet' type='text/css'>

</head>
<body data-spy="scroll" data-offset="50" data-target=".navbar-collapse">

	<!-- =========================
		 PRE LOADER
	============================== -->
	<div class="preloader">

		<div class="sk-rotating-plane"></div>

	</div>


	<!-- =========================
		 NAVIGATION LINKS
	============================== -->
	<div class="navbar navbar-fixed-top custom-navbar" role="navigation">
		<div class="container">

			<!-- navbar header -->
			<div class="navbar-header">
				<button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon icon-bar"></span>
					<span class="icon icon-bar"></span>
					<span class="icon icon-bar"></span>
				</button>
				<a href="#" class="navbar-brand">New Event</a>
			</div>

			<div class="collapse navbar-collapse">

				<ul class="nav navbar-nav navbar-right">
					<li><a href="#intro" class="smoothScroll">Intro</a></li>
					<li><a href="#overview" class="smoothScroll">Overview</a></li>
					<li><a href="#speakers" class="smoothScroll">Speakers</a></li>
					<li><a href="#program" class="smoothScroll">Programs</a></li>
					@if(User.Identity.IsAuthenticated){

					<li><a  class="smoothScroll">@User.Identity.Name</a></li>
					<li><a asp-action="Logout" asp-controller="Account" class="smoothScroll">Logout</a></li>
					
					}
					else{
						<li><a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path.Value" class="smoothScroll">Login</a></li>
						<li><a asp-action="Register" asp-controller="Account" class="smoothScroll">Register</a></li>
					}
				</ul>

			</div>

		</div>
	</div>

        @RenderBody()
