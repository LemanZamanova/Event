@model List<GetSpeakerVM>

@using NewEvent.Models
@using NewEvent.ViewModels
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Speakers Table</h4>
                <a class="btn btn-success"> Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetSpeakerVM SpeakerVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count;
                                    </td>
                                    <td>
                                        @SpeakerVM.Name @SpeakerVM.Surname
                                    </td>
                                    <td class="py-1">
                                        <img src="~/assets/images/@SpeakerVM.Image" alt="image" />
                                    </td>
                                    <td>
                                        @SpeakerVM.PositionName
                                    </td>


                                    <td>
                                        <a asp-action="Detail" asp-route-id="@SpeakerVM.Id" class="btn btn-warning"> <i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@SpeakerVM.Id" class="btn btn-danger"> <i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
